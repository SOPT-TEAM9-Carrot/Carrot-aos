<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp">


    <TextView
        android:id="@+id/tv_item_home_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textAppearance="@style/TextAppearance.Carrot.title1_bold"
        android:textColor="@color/color_sub_gray1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="데이즈호텔 프론트" />

    <TextView
        android:id="@+id/tv_item_home_list_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="3dp"
        android:drawableEnd="@drawable/ic_info"
        android:drawablePadding="7dp"
        android:text="데이즈호텔명동 · 충무로1가 · 광고"
        android:textAppearance="@style/TextAppearance.Carrot.body_medium_11"
        android:textColor="@color/color_sub_gray3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_item_home_list_title" />

    <TextView
        android:id="@+id/tv_item_home_list_numbers_of_reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="후기1"
        android:textAppearance="@style/TextAppearance.Carrot.sub_title_bold_12"
        android:textColor="@color/color_main1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_item_home_list_detail" />


    <TextView
        android:id="@+id/tv_item_home_list_review_tag_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/rectangle_gray7_radius_4"
        android:paddingHorizontal="8dp"
        android:paddingVertical="3dp"
        android:text="연락을 잘해줘요"
        android:textAppearance="@style/TextAppearance.Carrot.body_medium_11"
        android:textColor="@color/color_sub_gray2"
        app:layout_constraintStart_toEndOf="@id/tv_item_home_list_numbers_of_reviews"
        app:layout_constraintTop_toBottomOf="@id/tv_item_home_list_detail" />

    <TextView
        android:id="@+id/tv_item_home_list_review_tag_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/rectangle_gray7_radius_4"
        android:backgroundTint="@color/color_sub_blue2"
        android:paddingHorizontal="8dp"
        android:paddingVertical="3dp"
        android:text="걸어서 10분"
        android:textAppearance="@style/TextAppearance.Carrot.body_medium_11"
        android:textColor="@color/color_sub_blue1"
        app:layout_constraintStart_toEndOf="@id/tv_item_home_list_review_tag_1"
        app:layout_constraintTop_toTopOf="@id/tv_item_home_list_review_tag_1" />

    <TextView
        android:id="@+id/tv_item_home_list_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:text="월~일 | 18:00~ 00:30 협의"
        android:textAppearance="@style/TextAppearance.Carrot.body_medium_14"
        android:textColor="@color/color_sub_gray4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_item_home_list_numbers_of_reviews" />


    <ImageView
        android:id="@+id/iv_item_home_list_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/rectangle_gray7_radius_6"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/tv_item_home_list_salary"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />


    <TextView
        android:id="@+id/tv_item_home_list_salary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="16dp"
        android:textAppearance="@style/TextAppearance.Carrot.sub_title_bold"
        android:textColor="@color/color_main1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_item_home_list_img"
        tools:text="시급 10,000원" />

    <View
        android:id="@+id/view_item_home_list_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="15dp"
        android:background="@color/color_sub_gray6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_item_home_list_period" />

</androidx.constraintlayout.widget.ConstraintLayout>